<% if @user_saved %>
	$('#new_user_modal').modal('hide')
	$('#user_listing_container').html('<%= j render(render partial: 'users_listing', locals: {users: @users}) %>');
	$('#datatable-editable_users').dataTable({
	'sPaginationType': 'full_numbers',
	aoColumnDefs: [
	  {
	    bSortable: false,
	    aTargets: [1, -1]
	  }
	]
	});
<% end %>