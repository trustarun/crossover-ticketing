<p id="notice"><%= notice %></p>

<h1>Listing Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Issuer user</th>
      <th>Assigned to</th>
      <th>Category</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.issuer_user_id %></td>
        <td><%= ticket.assigned_to_id %></td>
        <td><%= ticket.category_id %></td>
        <td><%= ticket.status_id %></td>
        <td><%= ticket.priority_id %></td>
        <td><%= ticket.due_date %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
