<!-- Database table start -->
<div class="row">
  <div class="col-lg-12">
    <div class="widget-container fluid-height clearfix">
      <div class="heading">
        <i class="fa fa-table"></i>My Tickets 
        <div class="btn-group pull-right">
        <% if current_user.user_type_id == 2%>
         <%= link_to 'All Tickets', tickets_path, class: "btn btn-info", id: "all_ticket" %>   
        <% else %>                 
          <%= link_to 'New Ticket', "javascript:void(0)", class: "btn btn-info", id: "add_new_ticket" %>
        <% end %>
        </div>
    </div>
    <div class="widget-content padded clearfix" id="my_ticket_listing_container">
      <%= render partial: 'my_tickets_listing', locals: {tickets: @tickets} %>
    </div>
  </div>
</div>
<!-- end DataTables -->
<%= render "new_ticket_modal" %>
