<%= form_for(@ticket, remote: true) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset class="scheduler-border">
    <legend class="scheduler-border">Raise Ticket</legend>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.collect {|category| [ category.name, category.id ] }, class: "form-control" , placeholder: "Mobile number"%>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" , placeholder: "your problem heading"%>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" , placeholder: "your problem detail"%>
    </div>
    <div class="form-group">
      <%= f.label :priority_id %>
      <%= f.select :priority_id, Priority.all.collect {|priority| [ priority.name, priority.id ] }, class: "form-control" , placeholder: "Mobile number"%>
    </div>
      <div class="actions">
      <%= f.submit "Create", class: "btn-primary", id: "raise_new_ticket" %>
    </div>
  <fieldset>
<% end %>
